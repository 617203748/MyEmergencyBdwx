//高德地图位置转换API
		http://restapi.amap.com/v3/assistant/coordinate/convert?locations=112.611328,37.874149&coordsys=gps&output=json&key=fe4ce01d5fc91044c79beb7540acfd91
		http://restapi.amap.com/v3/assistant/coordinate/convert?locations=112.611328,37.874149&coordsys=baidu&output=xml&key=fe4ce01d5fc91044c79beb7540acfd91
		
		HashMap<String, Object> paramChange = new HashMap<String, Object>();
		String urlAccessToken = "http://restapi.amap.com/v3/assistant/coordinate/convert?locations=" + event.getLongitude() + "," + event.getLatitude() + "&coordsys=gps&output=json&key=fe4ce01d5fc91044c79beb7540acfd91";
		HttpGet get = new HttpGet(urlAccessToken);
		try {
			HttpClient client = new DefaultHttpClient();
			HttpResponse response = client.execute(get);
		
			String responseString = null;
			if (response.getEntity() != null) {
				responseString = EntityUtils.toString(response.getEntity());
				System.out.println(responseString);
				logger.info("位置转换:" + responseString);
		
				JSONObject jsonObject = JSONObject.parseObject(responseString);
		
				if (jsonObject.getIntValue("status") == 1) {
					String lat = jsonObject.getString("locations").split(",")[1];
					String lon = jsonObject.getString("locations").split(",")[0];
				}
			}
		
		} catch (Exception e) {
			e.printStackTrace();
		}
		
		
		
//Java创建文件夹
		Date date = new Date(System.currentTimeMillis());
		DateFormat format = new SimpleDateFormat("yyyy-MM-dd");
		String time = format.format(date);
		
		// 获取文件绝对路径
		HttpServletRequest request = ((ServletRequestAttributes) RequestContextHolder.getRequestAttributes()).getRequest();
		final String filePath = request.getSession().getServletContext().getRealPath("FILE/FILE_VOICE/");
		
		File fileDir = new File(filePath + "//" + time);
		
		if (!fileDir.exists()) {
			fileDir.mkdirs();
		} else {
			return "文件夹已存在";
		}
		

